#!/bin/bash
set -e

if [ "$#" -ne 1 ]
then
  echo "Please give the lowercase project name (without spaces) as the argument."
  exit 1
fi

NAME="$1"
echo "Project is named: $1"

echo "Renaming the cabal file"
mv PROJECTNAME.cabal "${NAME}.cabal"

echo "Replacing occurrences of PROJECTNAME"
find ./ -type f -exec sed -i -e "s/PROJECTNAME/$NAME/g" {} \;

